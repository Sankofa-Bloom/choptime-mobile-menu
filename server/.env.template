# ==============================================
# CHOPTYM SERVER ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to server/.env and fill in your actual values

# ==============================================
# SUPABASE DATABASE CONFIGURATION
# ==============================================
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3001
NODE_ENV=development

# ==============================================
# PAYMENT INTEGRATION - SWYCHR
# ==============================================
SWYCHR_EMAIL=your_swychr_email@example.com
SWYCHR_PASSWORD=your_swychr_password_here

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
EMAIL_SERVICE=gmail
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASS=your_gmail_app_password
ZOHO_USER=support@yourdomain.com
ZOHO_PASS=your_zoho_password
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USER=your_smtp_user
EMAIL_PASS=your_smtp_password
EMAIL_FROM_NAME=ChopTym
ADMIN_EMAIL=admin@yourdomain.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_here_development
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8888
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUEST_SIZE=10mb
ENABLE_REQUEST_LOGGING=true

# ==============================================
# LEGACY PAYMENT (if still used)
# ==============================================
FAPSHI_RETURN_URL=http://localhost:5173/payment-success
