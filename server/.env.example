# =============================================================================
# ChopTym Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for API authentication (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Request Size Limits
MAX_REQUEST_SIZE=10mb

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration for Real Email Sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Email Settings
ADMIN_EMAIL=admin@choptym.com
ADMIN_PHONE=+237670416449
SUPPORT_EMAIL=support@choptym.com

# Email Templates
EMAIL_FROM_NAME=ChopTym
EMAIL_FROM_ADDRESS=noreply@choptym.com

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Primary Payment Method
DEFAULT_PAYMENT_METHOD=fapshi

# Fapshi API Configuration (Primary)
FAPSHI_API_USER=your_fapshi_api_user_here
FAPSHI_API_KEY=your_fapshi_api_key_here
FAPSHI_TEST_MODE=true
FAPSHI_BASE_URL=https://api.fapshi.com
FAPSHI_WEBHOOK_SECRET=your_fapshi_webhook_secret_here

# Campay API Configuration (Secondary)
CAMPAY_API_KEY=your_campay_api_key_here
CAMPAY_BASE_URL=https://sandbox-api.campay.net
CAMPAY_TEST_MODE=true
CAMPAY_WEBHOOK_SECRET=your_campay_webhook_secret_here

# Payment Feature Flags
ENABLE_FAPSHI_PAYMENTS=true
ENABLE_CAMPAY_PAYMENTS=false

# =============================================================================
# WEBHOOK & CALLBACK URLs
# =============================================================================
# Development URLs
CAMPAY_CALLBACK_URL=http://localhost:3001/api/payment-webhook
CAMPAY_RETURN_URL=http://localhost:3000/payment-success
FAPSHI_CALLBACK_URL=http://localhost:3001/api/payment-webhook
FAPSHI_RETURN_URL=http://localhost:3000/payment-success

# Production URLs (update these for production)
# CAMPAY_CALLBACK_URL=https://yourdomain.com/api/payment-webhook
# CAMPAY_RETURN_URL=https://yourdomain.com/payment-success
# FAPSHI_CALLBACK_URL=https://yourdomain.com/api/payment-webhook
# FAPSHI_RETURN_URL=https://yourdomain.com/payment-success

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=server.log
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
ENABLE_CACHING=true

# =============================================================================
# ADMIN AUTHENTICATION
# =============================================================================
ADMIN_PIN=1234
ADMIN_SESSION_TIMEOUT=3600000

# =============================================================================
# DELIVERY CONFIGURATION
# =============================================================================
DEFAULT_DELIVERY_FEE=500
FREE_DELIVERY_THRESHOLD=5000
MAX_DELIVERY_DISTANCE=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics (optional)
GA_TRACKING_ID=

# Sentry Error Tracking (optional)
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Only set these in development environment
DEBUG_MODE=false
MOCK_PAYMENTS=false
SKIP_EMAIL_SENDING=false 