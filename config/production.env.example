# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_BUILD_MODE=production

# =============================================================================
# SUPABASE CONFIGURATION (Production)
# =============================================================================
# Replace with your production Supabase project credentials
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=https://api.choptym.com
PORT=3001
HOST=0.0.0.0

# =============================================================================
# PAYMENT PROCESSORS (Production Keys)
# =============================================================================
# Stripe (if used)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...

# Campay
CAMPAY_APP_USERNAME=your-campay-username
CAMPAY_APP_PASSWORD=your-campay-password

# Fapshi
FAPSHI_PUBLIC_KEY=your-fapshi-public-key
FAPSHI_SECRET_KEY=your-fapshi-secret-key

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================
EMAILJS_SERVICE_ID=your-emailjs-service-id
EMAILJS_TEMPLATE_ID=your-emailjs-template-id
EMAILJS_PUBLIC_KEY=your-emailjs-public-key

# SMTP Configuration (Alternative to EmailJS)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SESSION_SECRET=your-super-secure-session-secret-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# API Keys
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database
DB_SSL=true
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=warn
LOG_FORMAT=json
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PERFORMANCE & CDN
# =============================================================================
CDN_URL=https://cdn.choptym.com
IMAGE_OPTIMIZATION=true
ENABLE_COMPRESSION=true
CACHE_MAX_AGE=31536000

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@choptym.com
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_MFA_ENABLED=true
ADMIN_SESSION_TIMEOUT=3600000

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
COMPANY_NAME=ChopTym
COMPANY_EMAIL=contact@choptym.com
COMPANY_PHONE=+237670416449
COMPANY_ADDRESS=Busumbu Junction, Limbe - Cameroon

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_PWA=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance Monitoring
DATADOG_API_KEY=your-datadog-api-key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOYMENT_ENV=production
CI_CD_ENABLED=true
AUTO_DEPLOY=true
BACKUP_ENABLED=true
MONITORING_ENABLED=true

# =============================================================================
# SECURITY HEADERS (Additional)
# =============================================================================
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_RATE_LIMITING=true

# =============================================================================
# MAINTENANCE MODE
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently updating our services. Please check back soon!"

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. Never commit this file to version control
# 2. Rotate secrets regularly (every 30-90 days)
# 3. Use environment-specific values for staging/production
# 4. Test all configurations in staging before production
# 5. Monitor logs and alerts after deployment
# 6. Keep backup configurations ready for rollback