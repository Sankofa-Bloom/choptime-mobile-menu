{
  "name": "choptym-mobile-menu",
  "private": true,
  "description": "ChopTym - Cameroonian Food Delivery PWA",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite --mode development",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\"",
    "server": "cd server && npm run dev",
    "build": "npx vite build",
    "build:prod": "NODE_ENV=production tsc && vite build --mode production",
    "build:dev": "NODE_ENV=development vite build --mode development",
    "build:staging": "NODE_ENV=staging vite build --mode staging",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "clean": "rm -rf dist build .vite",
    "clean:all": "npm run clean && rm -rf node_modules/.vite",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "analyze:prod": "npm run build:prod && npx vite-bundle-analyzer dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:build": "npm run build && npm run type-check",
    "start": "vite preview --port 3000",
    "start:prod": "npm run build:prod && npm run start",
    "serve": "npm run build:prod && npx serve dist -s -l 3000",
    "dev:setup": "cp .env.development .env && cd server && cp .env.development .env",
    "prod:setup": "cp config/production.env.example .env && cd server && cp config/production.env.example .env",
    "staging:setup": "cp config/staging.env.example .env && cd server && cp config/staging.env.example .env",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u",
    "deps:install": "rm -rf node_modules package-lock.json && npm install",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "deploy:prepare": "npm run security:audit && npm run lint && npm run type-check && npm run test:run",
    "deploy:patch": "npm run deploy:prepare && npm run version:patch && git add package.json && git commit -m \"ðŸ”– Version $(npm run version:current --silent)\" && git push origin main",
    "deploy:minor": "npm run deploy:prepare && npm run version:minor && git add package.json && git commit -m \"ðŸ”– Version $(npm run version:current --silent)\" && git push origin main",
    "deploy:major": "npm run deploy:prepare && npm run version:major && git add package.json && git commit -m \"ðŸ”– Version $(npm run version:current --silent)\" && git push origin main",
    "version:current": "node -p \"require('./package.json').version\"",
    "docker:build": "docker build -t choptym-mobile-menu .",
    "docker:run": "docker run -p 3000:3000 choptym-mobile-menu",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "pwa:validate": "npm run build:prod && npx pwa-asset-generator public/choptym-logo.jpeg --background '#D57A1F' --padding '20px'",
    "optimize:images": "npx imagemin 'src/**/*.{jpg,jpeg,png,svg}' --out-dir=dist/assets --plugin=mozjpeg --plugin=pngquant --plugin=svgo",
    "bundle:size": "npm run build:prod && npx bundlesize",
    "performance:budget": "npm run build:prod && npx lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse.json",
    "create-admin": "node scripts/create-admin-user.js",
    "setup-admin": "node scripts/setup-admin-user.js",
    "cleanup": "node scripts/cleanup-root-directory.js",
    "deploy": "./scripts/deploy-production.sh",
    "backup": "mkdir -p backups/$(date +%Y%m%d_%H%M%S) && cp -r dist backups/$(date +%Y%m%d_%H%M%S)/ 2>/dev/null || true"
  },
