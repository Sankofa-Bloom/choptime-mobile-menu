# ChopTym Frontend Environment Variables Example
# Copy this file to .env and fill in your actual values
# NOTE: All sensitive data (API keys, credentials) are handled server-side

# =============================================================================
# SUPABASE CONFIGURATION (Public keys only)
# =============================================================================
# These are public keys and safe to expose in frontend
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend server URL for API calls
VITE_API_BASE_URL=http://localhost:3001

# =============================================================================
# COMPANY INFORMATION (Public data)
# =============================================================================
VITE_COMPANY_NAME=ChopTym
VITE_COMPANY_WEBSITE=https://choptym.com
VITE_COMPANY_ADDRESS=Busumbu Junction, Limbe - Cameroon
VITE_COMPANY_DESCRIPTION=Authentic Cameroonian Cuisine Delivered

# =============================================================================
# ADMIN CONTACT (Public contact info)
# =============================================================================
VITE_ADMIN_EMAIL=admin@choptym.com
VITE_ADMIN_PHONE=+237670416449
VITE_ADMIN_WHATSAPP=+237670416449

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_PWA=true
VITE_ENABLE_SPLASH_SCREEN=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VITE_DEV_MODE=false
VITE_ENABLE_DEBUG_LOGS=true

# =============================================================================
# CUSTOMIZATION
# =============================================================================
VITE_PRIMARY_COLOR=#FF6B35
VITE_SECONDARY_COLOR=#F7931E
VITE_ACCENT_COLOR=#2C3E50
VITE_CURRENCY=XAF
VITE_CURRENCY_SYMBOL=â‚£
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,fr

# =============================================================================
# DEPLOYMENT
# =============================================================================
VITE_BUILD_MODE=production
VITE_APP_VERSION=2.0.0

# =============================================================================
# SECURITY NOTICE
# =============================================================================
# The following sensitive data is handled server-side and should NOT be in frontend:
# - Payment API keys (Campay, Fapshi)
# - Email service credentials (SMTP, EmailJS)
# - Webhook keys and secrets
# - Database connection strings
# - Admin passwords and tokens
#
# All payment processing, email sending, and sensitive operations are handled
# by the backend server at VITE_API_BASE_URL 