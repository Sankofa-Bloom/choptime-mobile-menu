# ==============================================
# CHOPTYM PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Use this template for production deployment (Netlify environment variables)

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================
VITE_NODE_ENV=production
VITE_USE_MOCK_DATA=false
VITE_DEBUG_API=false

# ==============================================
# SUPABASE DATABASE CONFIGURATION
# ==============================================
# Frontend (Vite) variables - must start with VITE_
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_supabase_anon_key

# Backend/Server variables (for Netlify Functions)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# ==============================================
# API CONFIGURATION
# ==============================================
# Production API base (handled by Netlify redirects)
# VITE_API_BASE_URL=  # Leave empty to use default (current origin)

# ==============================================
# PAYMENT INTEGRATION - SWYCHR
# ==============================================
SWYCHR_EMAIL=your_production_swychr_email@domain.com
SWYCHR_PASSWORD=your_production_swychr_password

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
# Primary email service for production
EMAIL_SERVICE=zoho

# Production Gmail Configuration (if using Gmail)
GMAIL_USER=noreply@choptym.com
GMAIL_PASS=your_production_gmail_app_password

# Production Zoho Configuration (recommended for business)
ZOHO_USER=support@choptym.com
ZOHO_PASS=your_production_zoho_password

# Production SMTP Configuration (if using custom SMTP)
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_USER=support@choptym.com
EMAIL_PASS=your_production_smtp_password

# Email settings
EMAIL_FROM_NAME=ChopTym - Cameroonian Food Delivery
ADMIN_EMAIL=admin@choptym.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Strong JWT Secret for production
JWT_SECRET=your_super_strong_production_jwt_secret_key_256_chars_minimum

# Production CORS settings
CORS_ORIGIN=https://choptym.com,https://www.choptym.com,https://choptym.netlify.app
CORS_CREDENTIALS=true

# Production rate limiting (stricter)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Request size limits
MAX_REQUEST_SIZE=5mb

# Logging (reduced in production)
ENABLE_REQUEST_LOGGING=false

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Port (handled by Netlify)
PORT=8888

# Production environment
NODE_ENV=production

# ==============================================
# FAPSHI PAYMENT (Legacy - if still used)
# ==============================================
FAPSHI_RETURN_URL=https://choptym.com/payment-success

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
VITE_ADMIN_EMAIL=admin@choptym.com

# ==============================================
# PRODUCTION FEATURES
# ==============================================
# Disable development features
VITE_ENABLE_DEV_TOOLS=false

# Production payment settings
VITE_ENABLE_MOCK_PAYMENTS=false

# ==============================================
# NETLIFY SPECIFIC
# ==============================================
# These are automatically set by Netlify, but documented here
# NETLIFY=true
# NETLIFY_DEV=false
# AWS_REGION=us-east-1

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
