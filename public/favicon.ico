<svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32">
  <title>KwataLink Favicon</title>
  <defs>
    <linearGradient id="orangeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FF6B35;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E89A4D;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Location Pin -->
  <g transform="translate(16, 10)">
    <!-- Pin body -->
    <path d="M0,-8 L-3,3 L0,5 L3,3 Z" fill="url(#orangeGradient)" stroke="#D57A1F" stroke-width="0.5"/>
    
    <!-- Pin hole -->
    <circle cx="0" cy="0" r="1" fill="white"/>
    <circle cx="0" cy="0" r="0.5" fill="#D57A1F"/>
  </g>
  
  <!-- Link elements -->
  <g transform="translate(13, 18)">
    <!-- First link segment -->
    <rect x="0" y="0" width="3" height="2" rx="0.5" fill="url(#orangeGradient)" stroke="#D57A1F" stroke-width="0.2"/>
    
    <!-- Second link segment -->
    <rect x="2" y="0" width="3" height="2" rx="0.5" fill="url(#orangeGradient)" stroke="#D57A1F" stroke-width="0.2"/>
    
    <!-- Connection line -->
    <line x1="3" y1="1" x2="2" y2="1" stroke="#D57A1F" stroke-width="0.5" stroke-linecap="round"/>
  </g>
</svg>