# ==============================================
# CHOPTYM DEVELOPMENT ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================
VITE_NODE_ENV=development
VITE_USE_MOCK_DATA=false
VITE_DEBUG_API=true

# ==============================================
# SUPABASE DATABASE CONFIGURATION
# ==============================================
# Frontend (Vite) variables - must start with VITE_
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Backend/Server variables
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==============================================
# API CONFIGURATION
# ==============================================
# Optional: Override default API base URL
VITE_API_BASE_URL=http://localhost:5173

# ==============================================
# PAYMENT INTEGRATION - SWYCHR
# ==============================================
SWYCHR_EMAIL=your_swychr_email@example.com
SWYCHR_PASSWORD=your_swychr_password_here

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
# Primary email service (gmail, zoho, smtp)
EMAIL_SERVICE=gmail

# Gmail Configuration
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASS=your_gmail_app_password

# Zoho Configuration (alternative)
ZOHO_USER=support@yourdomain.com
ZOHO_PASS=your_zoho_password

# Generic SMTP Configuration (if not using Gmail/Zoho)
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_USER=your_smtp_user
EMAIL_PASS=your_smtp_password

# Email settings
EMAIL_FROM_NAME=ChopTym
ADMIN_EMAIL=admin@yourdomain.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_here_development

# CORS settings
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8888
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request size limits
MAX_REQUEST_SIZE=10mb

# Logging
ENABLE_REQUEST_LOGGING=true

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Port for local development server
PORT=3001

# Node environment
NODE_ENV=development

# ==============================================
# FAPSHI PAYMENT (Legacy - if still used)
# ==============================================
FAPSHI_RETURN_URL=http://localhost:5173/payment-success

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
VITE_ADMIN_EMAIL=admin@yourdomain.com

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Enable development features
VITE_ENABLE_DEV_TOOLS=true

# Mock data for testing
VITE_ENABLE_MOCK_PAYMENTS=true
